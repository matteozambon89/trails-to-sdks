{
  "extends": "trails",
  "plugins": [
    "markdown",
    "json",
    "mocha"
  ],
  "globals": {
    "test": true
  },
  "rules": {
    "brace-style": [
      "warn",
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}
